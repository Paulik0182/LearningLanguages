<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kotlinAndroid.KotlinFragment">

    <TextView
        android:id="@+id/task_kotlin_text_view"
        style="@style/task_kotlin_tv_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:text="@string/task_english_fragment" />

    <TextView
        android:id="@+id/answer1_kotlin_text_view"
        style="@style/answer_kotlin_tv_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_option_english_fragment" />

    <TextView
        android:id="@+id/answer2_kotlin_text_view"
        style="@style/answer_kotlin_tv_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_option_english_fragment" />

    <TextView
        android:id="@+id/answer3_kotlin_text_view"
        style="@style/answer_kotlin_tv_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_option_english_fragment" />

    <TextView
        android:id="@+id/answer4_kotlin_text_view"
        style="@style/answer_kotlin_tv_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_option_english_fragment" />

</LinearLayout>